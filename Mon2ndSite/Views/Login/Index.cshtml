@model Mon2ndSite.ViewModels.UserViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Se connecter</h2>
<hr />

@if (Model.Log)
{
    <h3>
        Vous êtes déjà authentifié avec le login :
        @Model.User.Username
    </h3>
    @Html.ActionLink("Voulez-vous vous déconnecter ?", "Deconnexion")
}
else
{
    <h5>
        Veuillez vous authentifier :
    </h5>
    using (Html.BeginForm())
    {
        <div class="container">
            <div class="form-group">
                @Html.LabelFor(m => m.User.Username, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.User.Username, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.User.Username, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.User.Password, htmlAttributes: new { @class = "control-label" })
                @Html.PasswordFor(m => m.User.Password, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.User.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="">
                    <input class="btn btn-primary" role="button" type="submit" value="Se connecter" />
                </div>
            </div>        
            <br />
        </div>

        @Html.ActionLink("Créer un compte", "Create")
    }
}